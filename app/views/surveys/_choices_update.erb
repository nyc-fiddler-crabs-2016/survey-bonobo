<%@survey.questions.each do |balls|%>
  <h4><%=balls.content%></h4>
    <%balls.choices.each do |answer|%>
      <form name="answer_question" action="/choices/<%=answer.id%>" method="POST">
      <input type="hidden" name="_method" value="PUT">
      <input type="radio" name="content" value="<%=answer.content%>"><%=answer.content%>
      <input type="hidden" name="question_id" value="<%=answer.question_id%>">
      <input type="hidden" name="selected" value="<%=true%>">
      <br><br>
    <%end%>
      <input type="submit" value="submit">
      </form>
<%end%>
